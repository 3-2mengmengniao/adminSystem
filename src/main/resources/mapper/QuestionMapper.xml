<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.test.seminar.mapper.QuestionMapper">

    <resultMap id="questionResultMap" type="com.test.seminar.entity.Question">
        <result property="selected" column="is_selected"/>
        <association property="student" javaType="com.test.seminar.entity.Student" column="id" select="com.test.seminar.mapper.StudentMapper.getStudentByStudentId"/>
    </resultMap>

    <select id="getQuestionBySeminarControlId" resultMap="questionResultMap">
        select is_selected, score
        from question
        where klass_seminar_id={#seminarConrtolId}
    </select>

    <select id="getQuestionByTeamId" resultMap="questionResultMap">
        select is_selected, score
        from question
        where team={#teamId}
    </select>

    <select id="getQuestionByPresentationId" resultMap="questionResultMap">
        select is_selected, score
        from question
        where attendance={#presentationId}
    </select>

    <insert id="insertQuestion">
        insert into question(klass_seminar_id,attandance_id,team_id,student_id,is_selected,score)
        values(#{seminarControlId},#{presentationId},#{teamId},#{studentId},#{question.selected},#{question.score})
    </insert>

    <update id="updateQuestion">
        update question
        <set>
            <if test="question.selected!=null">
                is_selected=#{question.selected},
            </if>
            <if test="question.score!=null">
                score=#{question.score},
            </if>
        </set>
        where id=#{presentation.id}
    </update>

    <delete id="deleteQuestionByQuestionId">
        delete from question where id=#{questionId}
    </delete>
</mapper>